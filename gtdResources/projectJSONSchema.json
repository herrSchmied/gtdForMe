{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Project",
    "description": "A Project",
    "type": "object",
    "properties": 
	{
        "Project_Name": 
		{
            "description": "A unique name for the Project",
            "type": "string"
        },
        "Project_Status":
		{
            "description": "Status of Project",
            "type": "string"
        },
        "Goal":
		{
			"description": "Goal of the Project",
            "type": "string"
        },
		"NDT_of_Project":
		{
			"description": "Noted Date Time. Project written here Datetime",
			"type": "string",
			"pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}\\s[0-9]{2}:[0-9]{2}:[0-9]{2}\\.[0-9]{3}$"
		},
		"ADT_of_Project":
		{
			"description": "Activated Date Time. Project written here Datetime",
			"type": "string",
			"pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}\\s[0-9]{2}:[0-9]{2}:[0-9]{2}\\.[0-9]{3}$"
		},
		"Steps":
		{
			"description": "Steps to further the Project.",
			"type": "array",
			"itemes": { "type": "string"},
			"minItems": 1,
			"required": ["Description_of_Step", "Status_of_Step", "ADT_of_Step"]
		},
		"DLDT_of_Project":
		{
			"description": "Selfexplainatorish",
			"type": "string",
			"pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}\\s[0-9]{2}:[0-9]{2}:[0-9]{2}\\.[0-9]{3}$"
		}
    },
    "required": ["Project_Name", "Project_Status", "Goal", "NDT_of_Project", "ADT_of_Project", "Steps", "DLDT_of_Project"]
	}