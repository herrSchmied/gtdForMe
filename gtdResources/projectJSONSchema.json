{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Project",
    "description": "A Project",
    "type": "object",
    "properties": 
	{
        "Project_Name": 
		{
            "description": "A unique name for the Project",
            "type": "string"
        },
        "Project_Status":
		{
            "description": "Status of Project",
            "type": "string"
        },
        "Goal":
		{
			"description": "Goal of the Project",
            "type": "string"
        },
		"BDT_of_Project":
		{
			"description": "BirthdateTime",
			"type": "string",
			"pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}\\s[0-9]{2}:[0-9]{2}:[0-9]{2}\\.[0-9]{3}$"
		},
		"NDDT_of_Project":
		{
			"description": "Noted Down Date Time. Project written here Datetime",
			"type": "string",
			"pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}\\s[0-9]{2}:[0-9]{2}:[0-9]{2}\\.[0-9]{3}$"
		},
		"Steps":
		{
			"description": "Steps to further the Project.",
			"type": "array"
		},
		"Project_Deadline":
		{
			"description": "Selfexplainatorish",
			"type": "string",
			"pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}\\s[0-9]{2}:[0-9]{2}:[0-9]{2}\\.[0-9]{3}$"
		}
    },
    "required": ["Project_Name", "Project_Status", "Goal", "BDT_of_Project", "NDDT_of_Project", "Steps", "Project_Deadline"]
	}